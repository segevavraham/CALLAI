# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# CALLAI - Hebrew Voice AI Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Twilio Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+972xxxxxxxxxx

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# OpenAI Configuration (GPT-4)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# ElevenLabs Configuration
# Used for both Speech-to-Text (STT) and Text-to-Speech (TTS)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# ElevenLabs API Key
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# ElevenLabs Voice ID
# Use a Hebrew-optimized voice for best results
# Default: exsUS4vynmxd379XN4yO (Israeli Hebrew voice)
ELEVENLABS_VOICE_ID=exsUS4vynmxd379XN4yO

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Agent Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Agent name (used in conversations)
AGENT_NAME=דני

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# n8n Webhook Integration (Optional)
# For call analytics, follow-ups, and CRM integration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# n8n Webhook URL (leave empty to disable)
N8N_WEBHOOK_URL=

# Example:
# N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/call-analytics

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Server Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Server port (Railway provides this automatically)
PORT=3000

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Pipeline Version (Optional)
# Set to 'v2' to use the new state machine pipeline
# Set to 'v1' to use the legacy pipeline
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

PIPELINE_VERSION=v2

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Notes:
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
#
# 1. Never commit this file with real credentials!
# 2. Copy this to .env and fill in your values
# 3. Make sure .env is in .gitignore
#
# 4. To get your ElevenLabs Voice ID:
#    - Go to https://elevenlabs.io/app/voice-library
#    - Select a Hebrew voice
#    - Copy the Voice ID from the URL or settings
#
# 5. For n8n webhooks:
#    - Create a workflow in n8n
#    - Add a Webhook node
#    - Copy the webhook URL
#    - Paste it as N8N_WEBHOOK_URL
#
